CROSS_COMPILER_TARGET_ARCHS =

# Windows requires this to enable linking of libraries during build
SHARED_LIBRARIES = YES

# Enable file plugins to be built in ADSupport
WITH_HDF5         = YES
HDF5_EXTERNAL     = NO
HDF5_STATIC_BUILD = NO

WITH_SZIP     = YES
SZIP_EXTERNAL = NO

WITH_JPEG     = YES
JPEG_EXTERNAL = NO

WITH_TIFF     = YES
TIFF_EXTERNAL = NO

WITH_XML2     = YES
XML2_EXTERNAL = NO

WITH_ZLIB     = YES
ZLIB_EXTERNAL = NO

# Enable PVA plugin
WITH_EPICS_V4 = YES
